<p id="notice"><%= notice %></p>

<h1>Products</h1>



<div class="container-fluid">

  <div class="row">
    <% @products.each do |product| %>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="thumbnail">
          <%= image_tag(product.image_url, class: "img-responsive product_img") if product.image_url %>
          <div class="caption">
            <a href="#"><h3><%= product.name %></h3></a>
            <p><%= product.description %></p>
            <p>Colour: <%= product.colour %></p>
            <strong>$<%= product.price %></strong>
          </div>
        </div>

        <p><%= link_to 'Show', product %>
        <p><%= link_to 'Edit', edit_product_path(product) %>
        <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div><!-- /col -->
    <% end %>

  </div>
</div>
<div class="container">
  <%= link_to 'New Product', new_product_path %>
</div>

